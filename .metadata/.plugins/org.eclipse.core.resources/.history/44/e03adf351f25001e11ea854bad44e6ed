package com.microservice.authservice.util;

import java.time.LocalDateTime;
import java.util.Date;

import com.ctc.wstx.shaded.msv_core.datatype.xsd.datetime.TimeZone;

import io.jsonwebtoken.JwtBuilder;
import io.jsonwebtoken.Jwts;

public class JWTUtil {
	
	
	public static String getJwtToken(String name,String email) {
		LocalDateTime now = LocalDateTime.now();
		return Jwts.builder()
				.setSubject("USER-AUTHENTICATION")
				.claim("name", name)
				.claim("email", email)
				.setIssuedAt(Date.from(TimeZone.ZERO))
				.setExpiration(Date.from(now.pl))
				
	}

}
